<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Read</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="bg-zinc-900 text-white w-full h-full p-10">
      <div class="nav mb-10">
        <a class="text-blue-500" href="/">Back to Home</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <% if(users.length > 0){ %> <% users.forEach(function(user){ %>
      <div class="users flex gap-3 flex-wrap">
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 bg-zinc-700 rounded-lg overflow-hidden">
            <img
              class="w-full h-full object-cover"
              src="<%= user.image %>"
              alt=""
            />
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-10">
            <a class="text-green-500" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-500" href="/delete/<%= user._id %>"
              >Delete User</a
            >
          </div>
        </div>
        <% }) %> <% } else { %>
        <h3 class="text-zinc-300">no users yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
